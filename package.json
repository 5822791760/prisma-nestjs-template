{
  "name": "prisma-nestjs-template",
  "version": "0.0.1",
  "description": "",
  "author": "Khunakorn Johnson",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "20.19.1"
  },
  "scripts": {
    "cmd": "./cmd.sh",
    "start": "node dist/main",
    "start:worker": "node dist/worker",
    "start:repl": "node dist/repl",
    "start:cli": "NODE_ENV=cli node dist/cli",
    "db:deploy": "prisma migrate deploy --schema dist/core/db/schema.prisma",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:prisma": "prisma-case-format -f src/core/db/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=1",
    "test:mutation": "npx stryker run",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "cli": "./cmd.sh cli",
    "dev": "./cmd.sh dev",
    "debug": "nest start --debug --watch",
    "dev:worker": "nodemon --exec 'ts-node -r tsconfig-paths/register ./src/worker.ts'",
    "dev:email": "email dev --dir ./src/core/global/email/template --port 3001",
    "repl": "./cmd.sh repl",
    "lang": "npx typesafe-i18n --no-watch"
  },
  "dependencies": {
    "@bull-board/api": "^6.9.2",
    "@bull-board/express": "^6.9.2",
    "@faker-js/faker": "^9.7.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^6.6.0",
    "@prisma/extension-read-replicas": "^0.4.1",
    "@react-email/components": "^0.1.0",
    "@react-email/render": "^1.0.3",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.49.2",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "env-var": "^7.5.0",
    "error-stack-parser": "^2.1.4",
    "fast-csv": "^5.0.2",
    "jest-html-reporters": "^3.1.7",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.2",
    "nanoid": "^5.1.5",
    "nest-commander": "^3.15.0",
    "nest-winston": "^1.9.3",
    "nestjs-zod": "^4.3.1",
    "neverthrow": "^8.1.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "prisma": "^6.6.0",
    "prisma-extension-kysely": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typesafe-i18n": "^5.26.2",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.0.3",
    "winston": "^3.10.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@dbml/cli": "^3.13.0-alpha.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@stryker-mutator/core": "^8.6.0",
    "@stryker-mutator/jest-runner": "^8.6.0",
    "@stryker-mutator/typescript-checker": "^8.6.0",
    "@testcontainers/postgresql": "^10.16.0",
    "@testcontainers/redis": "^10.26.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-naming-convention": "^0.1.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.1",
    "prisma-case-format": "^1.1.0",
    "prisma-kysely": "^1.8.0",
    "react-email": "^4.0.16",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "testcontainers": "^10.26.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "./src/core/db/schema.prisma"
  },
  "jest": {
    "globalSetup": "<rootDir>/jest-global.setup.ts",
    "globalTeardown": "<rootDir>/jest-global.teardown.ts",
    "transformIgnorePatterns": [
      "/node_modules/(?!(nanoid)/)"
    ],
    "testTimeout": 40000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/src/core/$1",
      "@helper/(.*)": "<rootDir>/src/helper/$1",
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@testcore/(.*)": "<rootDir>/test/core/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./test-report",
          "filename": "report.html"
        }
      ]
    ],
    "coverageDirectory": "test-report",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}
